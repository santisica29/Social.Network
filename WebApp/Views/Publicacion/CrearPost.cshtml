@model Dominio.Models.Post

<h1>Crear un post</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Titulo" class="control-label">Titulo</label>
                <input asp-for="Titulo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Contenido" class="control-label">Contenido</label>
                <textarea asp-for="Contenido" class="form-control" style="resize:none;" /></textarea>
            </div>
            <div class="form-group">
                <label asp-for="NombreImagen" class="control-label">Imagen</label>
                <input type="file" name="archivo" asp-for="NombreImagen" class="form-control" />
            </div>
            <div class="form-group">
                <select class="form-select" name="visibilidad">
                    <option value="true">Público</option>
                    <option value="false">Privado</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p>@ViewBag.msg</p>
<div>
    <a asp-action="Index">Volver a la lista de posts</a>
</div>

<style>
    .form-group {
        margin-bottom: 10px;
    }
</style>